@model List<Producto>

@{
  ViewData[index: "title"] = "Productos";
}

<h1>@Model.Count Productos</h1>
<h2><a asp-controller="Productos" asp-action="Crear">Agregar producto</a></h2>
<section class="d-flex p-1 justify-content-center">
  <table>
    <tr>
      <th>Id</th>    
      <th>Descripcion</th>    
      <th>Precio</th>    
      <th>Detalles</th>    
      <th>Modificar</th>    
      <th>Eliminar</th>    
    </tr>
    @foreach (Producto producto in Model) {
      <tr>
        <td>@producto.IdProducto</td>    
        <td>@producto.Descripcion</td>    
        <td>@producto.Precio.ToString(format: "C")</td>    
        <td><a asp-controller="Productos" asp-action="Detalle" asp-route-id="@producto.IdProducto" class="btn btn-dark">+</a></td>
        <td><a asp-controller="Productos" asp-action="Modificar" asp-route-id="@producto.IdProducto" class="btn btn-warning">+</a></td>
        <td><a asp-controller="Productos" asp-action="Eliminar" asp-route-id="@producto.IdProducto"  class="btn btn-danger">+ </a></td>
      </tr>
    }
  </table>
</section>