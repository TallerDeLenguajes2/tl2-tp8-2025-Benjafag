@using System.Globalization
@model List<Producto>

@{
  ViewData["Title"] = "Productos";
  var count = Model?.Count ?? 0;
}

<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">Productos <span class="text-muted">(@count)</span></h1>
    <a class="btn btn-primary" asp-action="Crear">
      Agregar producto
    </a>
  </div>

  @if (count == 0)
  {
    <div class="alert alert-info" role="alert">
      Aún no hay productos. <a class="alert-link" asp-action="Crear">Cargá el primero</a>.
    </div>
  }
  else
  {
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th style="width: 80px;">ID</th>
            <th>Descripción</th>
            <th class="text-end" style="width: 140px;">Precio</th>
            <th class="text-center" style="width: 280px;">Acciones</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var producto in Model)
          {
            <tr>
              <td><span class="badge text-bg-secondary">@producto.IdProducto</span></td>
              <td>@producto.Descripcion</td>
              <td class="text-end">@producto.Precio.ToString("C")</td>
              <td class="text-center">
                <div class="btn-group" role="group" aria-label="Acciones">
                  <a class="btn btn-sm btn-outline-secondary" asp-action="Detalle" asp-route-id="@producto.IdProducto">
                    Detalle
                  </a>
                  <a class="btn btn-sm btn-outline-warning" asp-action="Modificar" asp-route-id="@producto.IdProducto">
                    Modificar
                  </a>
                  <a class="btn btn-sm btn-outline-danger" asp-action="Eliminar" asp-route-id="@producto.IdProducto">
                    Eliminar
                  </a>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  }

  <div class="mt-3">
    <a class="btn btn-outline-secondary" href="javascript:history.back()">← Volver</a>
  </div>
</div>