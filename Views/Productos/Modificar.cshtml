
@model Producto
@if (Model != null) {

  <h2>Modificar Producto</h2>

  <form asp-controller="Productos" asp-action="ModificarProducto" method="post" class="mt-3">
    <div class="mb-3">
      <label asp-for="Descripcion" class="form-label"></label>
      <input asp-for="Descripcion" class="form-control" required />
    </div>
    <input asp-for="IdProducto" type="hidden" value="@Model.IdProducto">
    <div class="mb-3">
      <label asp-for="Precio" class="form-label"></label>
      <input type="number" asp-for="Precio" class="form-control" step="0.01" min="0" required />
    </div>

    <div class="mb-3">
      <label asp-for="Imagen" class="form-label"></label>
      <input asp-for="Imagen" class="form-control" />
      <span class="form-text">URL de la imagen (opcional)</span>
    </div>

    <button type="submit" class="btn btn-warning">Modificar</button>
  </form>


} else {
  <h2>No se encontro producto con el id solicitado</h2>
}