@model ProductoDTO

<h2>Crear Producto</h2>

<form asp-controller="Productos" asp-action="CrearProducto" method="post" class="mt-3">
  <div class="mb-3">
    <label asp-for="Descripcion" class="form-label"></label>
    <input asp-for="Descripcion" class="form-control" required />
  </div>

  <div class="mb-3">
    <label asp-for="Precio" class="form-label"></label>
    <input asp-for="Precio" class="form-control" step="0.01" min="0" required />
  </div>

  <div class="mb-3">
    <label asp-for="Imagen" class="form-label"></label>
    <input asp-for="Imagen" class="form-control" />
    <span class="form-text">URL de la imagen (opcional)</span>
  </div>

  <button type="submit" class="btn btn-primary">Crear</button>
</form>

