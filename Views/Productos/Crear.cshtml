@model ProductoViewModel
@{
  ViewData["Title"] = "Crear Producto";
}

<div class="container py-4">

  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">Crear producto</h1>
    <a class="btn btn-secondary" href="javascript:history.back()">‚Üê Volver</a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">

      <form asp-controller="Productos" asp-action="Crear" method="post" class="mt-2">

        <div class="mb-3">
          <label asp-for="Descripcion" class="form-label"></label>
          <input asp-for="Descripcion" class="form-control" />
          <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Precio" class="form-label"></label>
          <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0.01" />
          <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="UrlImagen" class="form-label"></label>
          <input asp-for="UrlImagen" class="form-control" type="url" />
          <span asp-validation-for="UrlImagen" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Crear</button>

      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}