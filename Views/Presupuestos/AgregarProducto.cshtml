@model AgregarProductoViewModel

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Presupuesto #@Model.IdPresupuesto</h1>
        <a class="btn btn-outline-secondary" asp-action="Detalle" asp-route-id="@Model.IdPresupuesto">
            ‚Üê Volver
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <form method="post" asp-action="AgregarProducto">

                <div class="mb-3">
                    <label asp-for="IdProducto" class="form-label"></label>
                    <select asp-for="IdProducto" asp-items="@Model.ListaProductos" class="form-select">
                        <option value="0">-- Seleccionar Producto --</option>
                    </select>
                    <span class="text-danger small" asp-validation-for="IdProducto"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label"></label>
                    <input asp-for="Cantidad" type="number" step="1" class="form-control" />
                    <span class="text-danger small" asp-validation-for="Cantidad"></span>
                </div>

                <input asp-for="IdPresupuesto" value="@Model.IdPresupuesto" type="hidden" />

                <div class="d-grid mt-3">
                    <input type="submit" class="btn btn-primary" value="Agregar" />
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
